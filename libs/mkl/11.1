##
## modulefiles/modules.  Generated from modules.in by configure.
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tIntel Math Kernel Library"
}

module load licenses/intel

module-whatis   "Intel Math Kernel Library 11.1 (BLAS and LAPACK for CPU)"

# for Tcl script use only
set     version         11.1
set     prefix          /opt/intel/composer_xe_2013_sp1.0.080/mkl

setenv MKLROOT  ${prefix}
prepend-path    INCLUDE         ${prefix}/include
prepend-path    CPATH           ${prefix}/include
prepend-path    LIBRARY_PATH    ${prefix}/lib/intel64
prepend-path    LD_LIBRARY_PATH ${prefix}/lib/intel64
prepend-path    NLSPATH         ${prefix}/lib/intel64/locale/%l_%t/%N

